<p id="notice"><%= notice %></p>

<h1>User Work Skills</h1>

<table>
  <thead>
    <tr>
      <th>Total experience</th>
      <th>Last time used</th>
      <th>Last time used duration years</th>
      <th>Refresher</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_work_skills.each do |user_work_skill| %>
      <tr>
        <td><%= user_work_skill.total_experience %></td>
        <td><%= user_work_skill.last_time_used %></td>
        <td><%= user_work_skill.last_time_used_duration_years %></td>
        <td><%= user_work_skill.refresher %></td>
        <td><%= user_work_skill.notes %></td>
        <td><%= link_to 'Show', user_work_skill %></td>
        <td><%= link_to 'Edit', edit_user_work_skill_path(user_work_skill) %></td>
        <td><%= link_to 'Destroy', user_work_skill, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

