<%= form_with(model: user_work_skill, local: true) do |form| %>
  <% if user_work_skill.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user_work_skill.errors.count, "error") %> prohibited this user_work_skill from being saved:</h2>

      <ul>
      <% user_work_skill.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <%= form.hidden_field :user_work_experience_role_id, value: params[:user_work_experience_role_id]%>	
  
  <div class="field">
  	<%= form.collection_select :id, @skill_categories, :id, :description, {:prompt => "Select skill category",:class=>"skill_category_selection"} %>
  </div>


  <div class="field">
  	<%= form.collection_select :skill_inventory_id, @skill_inventories, :id, :specific_skill, {:prompt => "Select specific skill",:class=>"skill_inventory_selection"}  %>
  </div>

  
  <div class="field">
    <%= form.label :total_experience %>
    <%= form.number_field :total_experience, id: :user_work_skill_total_experience %>
  </div>

  <div class="field">
    <%= form.label :last_time_used %>
    <%= form.date_select :last_time_used, id: :user_work_skill_last_time_used %>
  </div>

  <div class="field">
    <%= form.label :last_time_used_duration_years %>
    <%= form.number_field :last_time_used_duration_years, id: :user_work_skill_last_time_used_duration_years %>
  </div>



  <div class="field">
    <%= form.label :notes %>
    <%= form.text_area :notes, id: :user_work_skill_notes %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
