<%content_for :content_page do%>
<div class="col-md-9">
          <div class="nav-tabs-custom">
            <ul class="nav nav-tabs">
              <li class="active">
              	<a href="#education" data-toggle="tab">
              		<h4>Job Descriptions/Roles</h4>
              	</a>
              </li>
            </ul>
            <div class="tab-content">
            	<ul class="timeline timeline-inverse">
	                  <li class="time-label">
	                        <span class="bg-gray">
								<b>Company Name : <%=@user_work_experience.company_name%></b>
								<%="  (#{@user_work_experience.date_from} - #{UtilityHelper.display_as_present_if_null(@user_work_experience.date_to)})"%>		                        	
	                        </span>
	                  </li>            	
	             </ul>     
                          	
              <%if !@user_work_experience_roles.empty?%>
			   <div class="active tab-pane" id="education">
                <!-- The timeline -->
                <ul class="timeline timeline-inverse">
                <% @user_work_experience_roles.each do |user_work_experience_role| %>
	                
	                  <!-- timeline time label -->
	                  <li class="time-label">
	                        <span class="bg-red">
	                        	
	                          <%= "#{user_work_experience_role.date_from} - #{UtilityHelper.display_as_present_if_null(user_work_experience_role.date_to)}" %>
	                        </span>
	                  </li>
	                  <!-- /.timeline-label -->
	                  <!-- timeline item -->
	                  <li>
	                    <i class="fa  fa-graduation-cap bg-blue"></i>
	
	                    <div class="timeline-item">
	                      <span class="time">
	                      		<i class="fa fa-clock-o"></i> 
	                      		Completed
	                      </span>
	
	                      <h3 class="timeline-header">
		                  	<%= link_to edit_user_work_experience_role_path(user_work_experience_role),class: "btn btn-primary btn-xs" do%>
	                      		<i class="fa fa-edit"></i>
	                      	<%end%>	                      		
	                      	<a href="#"><%= user_work_experience_role.project_name %></a>
	                      </h3>
	
	                      <div class="timeline-body">
	                      		<h5><%= user_work_experience_role.role %></h5><br />
								<%= user_work_experience_role.notes %>
	                      </div>
	                      <div class="timeline-footer">
	                      	<%= button_to( user_work_experience_role, {:onclick => "return confirm('Do you want to remove this entry?')", :method => :delete, :remote => true,class: "btn btn-primary btn-xs"}) do %>
	                      		<i class="fa fa-trash-o">  Delete</i>
	                      	<%end%>
	                      </div>
	                    </div>
	                  </li>
	                  <!-- END timeline item -->
	              <%end%>
	                  <li>
	                    <i class="fa fa-clock-o bg-gray"></i>
	                  </li>	              
	              </ul>  
              </div>              
              <%else%>
		              <div class="callout callout-danger">
		                <h5>No roles defined for this company.</h5>
		              </div>              
              <%end%>
              <!-- /.tab-pane -->
              
              <br />
				<%= link_to new_user_work_experience_role_path, class: "btn btn-primary" do %>
				  <i class="fa fa-plus">  Add roles performed for this company </i>
				<% end %>              
              <!-- /.tab-pane -->

              
              <!-- /.tab-pane -->
            </div>
            <!-- /.tab-content -->
          </div>
<%end%>
