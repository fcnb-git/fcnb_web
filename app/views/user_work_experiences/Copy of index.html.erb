<p id="notice"><%= notice %></p>

<h1>User Work Experiences</h1>

<table>
  <thead>
    <tr>
      <th>Company name</th>
      <th>Address</th>
      <th>City</th>
      <th>Province</th>
      <th>Country</th>
      <th>Industry</th>
      <th>Position</th>
      <th>Date from</th>
      <th>Date to</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_work_experiences.each do |user_work_experience| %>
      <tr>
        <td><%= user_work_experience.company_name %></td>
        <td><%= user_work_experience.address %></td>
        <td><%= user_work_experience.city %></td>
        <td><%= user_work_experience.province %></td>
        <td><%= user_work_experience.country %></td>
        <td><%= user_work_experience.industry %></td>
        <td><%= user_work_experience.position %></td>
        <td><%= user_work_experience.date_from %></td>
        <td><%= user_work_experience.date_to %></td>
        <td><%= link_to 'Show', user_work_experience %></td>
        <td><%= link_to 'Edit', edit_user_work_experience_path(user_work_experience) %></td>
        <td><%= link_to 'Destroy', user_work_experience, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

